---
import UnitedStates from '../../icons/UnitedStates.astro';

const languages = [
  {
    name: 'Ingles',
    icon: UnitedStates,
  },
  {
    name: 'Deutsch',
    icon: 'flag-icon-css-de',
  },
  {
    name: 'Italiano',
    icon: 'flag-icon-css-it',
  },
  {
    name: '中文 (繁體)',
    icon: 'flag-icon-css-cn',
  },
];
---

<div
  class="absolute top-10 z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700"
  id="language-dropdown-menu"
>
  <ul class="py-2 font-medium" role="none">
    {
      languages.map((languages) => (
        <li>
          <a
            href="#"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white"
            role="menuitem"
          >
            <div class="inline-flex items-center">
              <languages.icon class="size-5" /> {languages.name}
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</div>
