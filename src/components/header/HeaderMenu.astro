---
import ButtonDarkTheme from './ButtonDarkTheme.astro';
import ButtonMenu from './ButtonMenu.astro';
import HeaderLanguage from './HeaderLanguage.astro';

const MENU = [
  {
    title: 'Inicio',
    link: '/',
  },
  {
    title: 'Tours',
    link: '#',
  },
  {
    title: 'Destinos',
    link: '#',
  },
  {
    title: 'Servicios',
    link: '#',
  },
  {
    title: 'Contactanos',
    link: '#',
  },
];
---

<ButtonMenu />
<nav
  class="items-center justify-between hidden w-full md:flex md:justify-between md:w-3/4"
  id="toggleOpenMenu"
>
  <ul
    class="flex flex-col text-center font-medium p-4 md:p-0 mt-4 md:space-x-8 md:flex-row justify-center md:mt-0"
  >
    {
      MENU.map((menu) => (
        <li>
          <a
            href={menu.link}
            class="block py-2 px-3 text-txtLightPrimary rounded md:bg-transparent md:p-0 dark:text-txtDarkPrimary"
            aria-current="page"
          >
            {menu.title}
          </a>
        </li>
      ))
    }
  </ul>
  <div class="flex justify-center">
    <HeaderLanguage />
    <ButtonDarkTheme />
  </div>
</nav>
